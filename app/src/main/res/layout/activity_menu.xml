<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background2"
        tools:context=".MenuActivity">

        <ImageView
            android:id="@+id/choseImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/portfolio2" />

        <Button
            android:id="@+id/cusMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="30dp"
            android:text="Customer Management"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choseImageView" />

        <Button
            android:id="@+id/stockMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:text="STOCK MANAGEMENT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cusMngButton" />

        <Button
            android:id="@+id/financialMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:text="FINANCE MANAGEMENT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stockMngButton" />

        <Button
            android:id="@+id/reportMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:text="GENERATE REPORT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/financialMngButton" />

        <Button
            android:id="@+id/supplierMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:text="SUPPLIER MANAGEMENT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reportMngButton" />

        <Button
            android:id="@+id/deliveryMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:text="DELIVERY MANAGEMENT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supplierMngButton" />

        <Button
            android:id="@+id/adminMngButton"
            android:layout_width="358dp"
            android:layout_height="91dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="ADMIN PANEL"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deliveryMngButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>